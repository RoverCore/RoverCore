@model Rover.Web.Models.HomeViewModels.HomeViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-12 col-xl-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="card-title">
                    <h2>@Model.User.FullName's Dashboard</h2>
                </div>
                <p>Some status info here.</p>
                <a href="#" class="btn btn-success mt-3">
                    <span class="fa fa-envelope"></span> Send a Message
                </a>
            </div>
        </div>
    </div>
</div>

@if (User.IsInRole("Admin"))
{
    <div class="row">
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h5>Environment</h5>
                    </div>
                    <div class="card-text">
                        <p>Some stuff about the planet here.</p>
                            <a href="#" class="btn btn-primary mt-3">
                                <span class="fa fa-recycle"></span> Reduce, Reuse, and Recycle
                            </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h5>My Account</h5>
                    </div>
                    <p>It's how you log in!</p>
                    <a asp-area="Identity" asp-controller="Manage" asp-action="Index" class="btn btn-primary mt-3">
                        <span class="fa fa-user-circle-o"></span> Manage Account
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h5>Configuration</h5>
                    </div>
                    <p>Configuration stuff here.</p>
                    <a asp-area="Admin" asp-controller="Configuration" asp-action="Index" class="btn btn-primary m-3">
                        <span class="fa fa-cog"></span> Update Configuration
                    </a>
                </div>
            </div>
        </div>
    </div>

}
