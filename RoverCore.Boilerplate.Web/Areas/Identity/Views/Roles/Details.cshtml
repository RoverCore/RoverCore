@model RoverCore.Boilerplate.Domain.Entities.Identity.ApplicationRole

@{
    ViewData["Title"] = "Details";
}

<div class="page-header d-print-none mb-2">
	<div class="row align-items-center">
		<div class="col">
			<div class="page-pretitle">
				@ViewData["AreaTitle"]
			</div>
			<h2 class="page-title">
				Role Details
			</h2>
		</div>
	</div>
</div>
<div class="card shadow mb-5">
