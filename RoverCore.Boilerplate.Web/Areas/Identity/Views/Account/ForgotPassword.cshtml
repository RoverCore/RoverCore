@model RoverCore.Boilerplate.Web.Areas.Identity.Models.AccountViewModels.ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/Layouts/Front/_Layout.cshtml";
    ViewData["Title"] = "Forgot your password?";
    ViewData["CopyrightYear"] = DateTime.Now.Year;
}

<div class="container-tight py-4">
    <div class="text-center mb-4">
        <a href="." class="navbar-brand navbar-brand-autodark"><img src="./static/logo.svg" height="36" alt=""></a>
    </div>
    <form class="card card-md" asp-area="Identity" asp-controller="Account" asp-action="ForgotPassword" method="post">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Forgot password</h2>
            <p class="text-muted mb-4">Enter your email address and if you have an account you will be sent a password reset link.</p>
            <div class="mb-3">
                <div class="form-group">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter email"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-footer">
                <button onclick="this.form.submit()" class="btn btn-primary w-100">
                    <!-- Download SVG icon from http://tabler-icons.io/i/mail -->
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><rect x="3" y="5" width="18" height="14" rx="2"></rect><polyline points="3 7 12 13 21 7"></polyline></svg>
                    Send me new password
                </button>
            </div>
        </div>
    </form>
    <div class="text-center text-muted mt-3">
        Forget it, <a asp-area="Identity" asp-controller="Account" asp-action="Login">send me back</a> to the sign in screen.
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
