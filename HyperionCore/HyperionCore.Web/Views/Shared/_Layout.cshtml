<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ADS Backend</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/lib/inspinia/inspinia.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <div id="wrapper">

        @await Html.PartialAsync("_NavbarPartial")

        <div id="page-wrapper" class="gray-bg">
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top white-bg" role="navigation" style="margin-bottom: 0">
                    <div class="navbar-header">
                        <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
                    </div>
                    @await Html.PartialAsync("_LoginPartial")
                </nav>
            </div>
            <div class="wrapper wrapper-content animated fadeInRight">
                <div class="row">
                    <div class="col-lg-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
            <div class="footer">
                <div>
                    <strong>Copyright</strong> Easton Area School District &copy; @DateTime.Now.Year
                </div>
            </div>
        </div>
    </div>

    <!-- Libraries -->
    <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js" asp-append-version="true"></script>

    <!-- Custom Scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- INSPINIA -->
    <script src="~/lib/inspinia/plugins/metisMenu/jquery.metisMenu.js" asp-append-version="true"></script>
    <script src="~/lib/inspinia/plugins/slimscroll/jquery.slimscroll.min.js" asp-append-version="true"></script>
    <script src="~/lib/inspinia/inspinia.js" asp-append-version="true"></script>
    <script src="~/lib/inspinia/plugins/pace/pace.min.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
